{
  "name": "enzyme-async-helpers",
  "version": "0.9.0",
  "author": "Gabriel Nordeborn",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": "https://github.com/zth/enzyme-async-helpers",
  "description": "Async helpers for testing React components with Enzyme.",
  "keywords": [
    "enzyme",
    "react",
    "async",
    "promise",
    "await",
    "wait",
    "jest",
    "testing",
    "tdd"
  ],
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "lib",
    "yarn.lock"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "rm -rf lib && babel src/ -d lib/ --ignore __tests__",
    "test": "jest src --coverage",
    "test:watch": "yarn jest src --watch",
    "flow": "flow"
  },
  "jest": {
    "setupFiles": [
      "./config/jest-shims.js",
      "./config/jest-setup.js"
    ],
    "collectCoverageFrom": ["src/**/*"]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "flow-bin": "0.59",
    "flow-typed": "^2.2.3",
    "jest": "^21.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "peerDependencies": {
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.0"
  }
}
